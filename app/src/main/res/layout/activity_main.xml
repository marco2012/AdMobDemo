<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"> <!-- Added app namespace for backgroundTint -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <!-- START: Container for Logo and Title, centered and horizontal -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp"> <!-- Margin moved to the container -->

            <!-- Google Logo: Use your actual multi-colored 'G' logo vector drawable here. -->
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_google_logo_placeholder"
                android:layout_marginEnd="8dp"
                app:tint="@null" /> <!-- Use @null to ensure the logo retains its multi-color appearance -->

            <!-- Title Text -->
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AdMob Demo"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>
        <!-- END: Container for Logo and Title -->

        <!-- Google Blue - #4285F4 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBannerAds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/banner_ads"
            android:textColor="#FFFFFF"
            app:backgroundTint="#4285F4"
            android:layout_marginBottom="12dp" /> <!-- Added spacing -->

        <!-- Google Green - #0F9D58 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdaptiveBannerAds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/adaptive_banner_ads"
            android:textColor="#FFFFFF"
            app:backgroundTint="#0F9D58"
            android:layout_marginBottom="12dp" /> <!-- Added spacing -->

       <!-- &lt;!&ndash;&lt;!&ndash; Google Red - #DB4437 &ndash;&gt;&ndash;&gt;
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInterstitialAds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/interstitial_ads"
            android:textColor="#FFFFFF"
            app:backgroundTint="#DB4437"
            android:layout_marginBottom="12dp" /> &lt;!&ndash; Added spacing &ndash;&gt;

        &lt;!&ndash;&lt;!&ndash; Google Yellow - #F4B400 (Using Black text for contrast) &ndash;&gt;&ndash;&gt;
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNativeAds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/native_ads"
            android:textColor="#000000"
            app:backgroundTint="#F4B400"
            android:layout_marginBottom="12dp" /> &lt;!&ndash; Added spacing &ndash;&gt;

        &lt;!&ndash;&lt;!&ndash; Google Blue - #4285F4 &ndash;&gt;&ndash;&gt;
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRewardedAds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rewarded_ads"
            android:textColor="#FFFFFF"
            app:backgroundTint="#4285F4"
            android:layout_marginBottom="12dp" /> &lt;!&ndash; Added spacing &ndash;&gt;

        &lt;!&ndash;&lt;!&ndash; Google Green - #0F9D58 &ndash;&gt;&ndash;&gt;
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRewardedInterstitialAds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rewarded_interstitial_ads"
            android:textColor="#FFFFFF"
            app:backgroundTint="#0F9D58"
            android:layout_marginBottom="12dp" /> &lt;!&ndash; Added spacing &ndash;&gt;

        &lt;!&ndash;&lt;!&ndash; Google Red - #DB4437 &ndash;&gt;&ndash;&gt;
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAppOpenAds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_open_ads"
            android:textColor="#FFFFFF"
            app:backgroundTint="#DB4437" />-->
    </LinearLayout>
</layout>
